    <body>
    <form action="/index/email_sender" enctype="multipart/form-data" method="POST">
        <div class="row">
          <div class="col-md-8">
              <div id="menu">
            <div class="buffer"></div>
            <h1></h1>
                <h2>Sending Mail</h2>
                    <ul>
                            <div class="field">
                                <h1 class="fa fa-reply" style="color:white">From<input type="text" name="mail_from" value="<%= current_user.email %>" readonly></h1>
                            </div>
                            <div class="field">
                                <h1 class="fa fa-share" style="color:white">To<input type="email" name="mail_to" value="" placeholder="Input Email Address"></h1>
                            </div>
                            <div class="field">
                                <h1 class="fa fa-share" style="color:white">CC<input type="text" name="mail_cc" value="" placeholder="Input CC"></h1>
                            </div>
                            <div class="field">
                                <input type="submit" value="Submit">
                            </div>
                    </ul>
                </div>
          </div>
          <div class="col-md-4" style="position:absolute; top:160px; right:150px;">
                  <h1 class="fa fa-pencil-square-o" style="color:white;">Title</h1>
                  <div class="field">
                  <input type="text" name="mail_title" placeholder="Input Title Here">  
                  </div>
                  <h1 class="fa fa-align-justify" style="color:white;"> Text</h1>
                  <div class="field">
                  <textarea rows="4" name="mail_content" cols="50" placeholder="input your text" style="height:200px"></textarea>
                  <input type="file" name="mail_file">
                  </div>
          </div>
        </div>
        </form> 
        
      
